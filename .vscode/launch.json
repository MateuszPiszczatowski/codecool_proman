    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "main.py",
                "FLASK_DEBUG": "1",
                "MY_PSQL_DBNAME": "cc_proman",
                "MY_PSQL_USER": "cc_proman",
                "MY_PSQL_HOST": "localhost",
                "MY_PSQL_PASSWORD": "proman"
            },
            "args": ["run", "--no-debugger", "--no-reload"],
            "jinja": true,
            "justMyCode": true,
            "pythonArgs": ["-Xfrozen_modules=off"]
        }
    ]
}
